{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022", // Modern Node versions support this
    "module": "NodeNext", // Crucial for "type": "module"
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "#*": ["src/*"] 
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}